@{
    ViewData["Title"] = "Project Ticket Counts";
}
<!DOCTYPE html>
<html>

<h2>Chart</h2>

<head>
    <!--Load the AJAX API-->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">

        // Load the Visualization API and the corechart package.
        google.charts.load('current', { 'packages': ['corechart'] });

        // Set a callback to run when the Google Visualization API is loaded.
        google.charts.setOnLoadCallback(drawChart);

        // Callback that creates and populates a data table,
        // instantiates the pie chart, passes in the data and
        // draws it.
        function drawChart() {
            fetch('/Tickets/ProjectTicketCounts')
                .then(response => response.json())
                .then(data => {
                    var dataArray = [['Project', 'Tickets']];
                    data.forEach(item => {
                        dataArray.push([item.project, item.count]);
                    });

                    var data = google.visualization.arrayToDataTable(dataArray);

                    var options = {
                        title: 'Project Ticket Counts',
                        showTextEvery: 1
                    };

                    var chart = new google.visualization.BarChart(document.getElementById('chart_div'));

                    chart.draw(data, options);
                });
        }
                
    </script>
</head>

<body>
    <!--Div that will hold the pie chart-->
    <div id="chart_div"></div>
    <div class="form-group" style="padding-top: 20px;">
        @Html.ActionLink("Search Tickets", "Search", "Tickets", null, new { @class = "btn btn-primary" })

        @Html.ActionLink("Create New Ticket", "Create", "Tickets", null, new { @class = "btn btn-primary" })
    </div>
</body>
</html>
